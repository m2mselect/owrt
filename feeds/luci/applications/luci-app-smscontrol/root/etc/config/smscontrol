config smscontrol 'common'
        option enabled '0'

config smscontrol 'send'
        option to ''
        option msgtxt ''

config call
        option enabled '0'
        option ack '0'
        option command 'reboot'

config remote
        option enabled '0'
        option received 'reboot'
        option command 'reboot'

config remote
        option enabled '0'
        option received 'factory'
        option command 'echo y | firstboot'

config cli
        option enabled '0'
        option received 'CLI$any_cli_command_here'
        option command 'any_cli_command_here'
