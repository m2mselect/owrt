config interface 'wire_internet'
        option enabled '0'
        list track_ip '8.8.4.4'
        list track_ip '8.8.8.8'
        option reliability '2'
        option count '1'
        option timeout '2'
        option interval '5'
        option down '3'
        option up '3'

config interface 'internet'
        list track_ip '8.8.8.8'
        option reliability '1'
        option count '1'
        option up '1'
        option enabled '0'
        option timeout '3'
        option interval '60'
        option down '3'

config interface 'wwan0'
        list track_ip '8.8.8.8'
        option reliability '1'
        option count '1'
        option up '1'
        option enabled '0'
        option timeout '3'
        option interval '60'
        option down '3'

config member 'eth_m1_w3'
        option interface 'wire_internet'
        option metric '1'
        option weight '3'

config member 'eth_m2_w3'
        option interface 'wire_internet'
        option metric '2'
        option weight '3'

config member '3g_m1_w2'
        option interface 'internet'
        option metric '1'
        option weight '2'

config member '3g_m2_w2'
        option interface 'internet'
        option metric '2'
        option weight '2'

config member '4g_m1_w2'
        option interface 'wwan0'
        option metric '1'
        option weight '2'

config member '4g_m2_w2'
        option interface 'wwan0'
        option metric '2'
        option weight '2'

config policy 'eth_only'
        list use_member 'eth_m1_w3'

config policy '3g_only'
        list use_member '3g_m1_w2'

config policy '4g_only'
        list use_member '4g_m1_w2'

config policy 'balanced'
        list use_member 'eth_m1_w3'
        list use_member '3g_m1_w2'
        list use_member '4g_m1_w2'

config policy 'eth_prefer'
        list use_member 'eth_m1_w3'
        list use_member '3g_m2_w2'
        list use_member '4g_m2_w2'

config policy '3g_prefer'
        list use_member 'eth_m2_w3'
        list use_member '3g_m1_w2'

config policy '4g_prefer'
        list use_member 'eth_m2_w3'
        list use_member '4g_m1_w2'

config rule 'default_rule'
        option dest_ip '0.0.0.0/0'
        option proto 'all'
        option sticky '0'
        option use_policy 'eth_prefer'
